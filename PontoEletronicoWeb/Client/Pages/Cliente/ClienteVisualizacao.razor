@page "/Cliente/Visualizar/{id:int}"

@inherits ClienteVisualizacaoBase

<section>
    <div>
        <h5 class="text-muted mb-3">Consultar Cliente</h5>
    </div>

    <div>
        <div class="m-2">
            <div class="row">
                <div class="col-xs col-sm col-md col-lg col-xl col-xxl">
                    <div class="form-group mb-2">
                        <small><label asp-for="" class="small mb-0">Nome</label></small>
                        <input maxlength="100" @bind="model.Nome" class="form-control form-control-sm" placeholder="Digite o Nome do Cliente" disabled />
                    </div>
                </div>
            </div>


            <div class="row mt-1">
                <div class="col-xs-12 col-sm-12 col-md col-lg col-xl col-xxl">
                    <small><label asp-for="" class="small mb-0">CEP</label></small>
                    <input maxlength="9" @bind-value="model.Cep" type="text" class="form-control form-control-sm" placeholder="Digite o CEP do cliente" disabled/>
                </div>
            </div>

            <div class="row mt-1">
                <div class="col-xs-12 col-sm-12 col-md-11 col-lg-11 col-xl-11 col-xxl-11">
                    <small><label asp-for="" class="small mb-0">Logradouro</label></small>
                    <input maxlength="100" @bind="model.Logadouro" class="form-control form-control-sm" placeholder="Digite o Logradouro do Cliente" disabled/>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 col-xl-1 col-xxl-1">
                    <small><label asp-for="" class="small mb-0">N°</label></small>
                    <input maxlength="100" @bind="model.Numero" class="form-control form-control-sm" placeholder="N°" disabled/>
                </div>
            </div>

            <div class="row mt-1">
                <div class="col-xs-12 col-sm-12 col-md col-lg col-xl col-xxl">
                    <small><label asp-for="" class="small mb-0">Bairro</label></small>
                    <input maxlength="100" @bind="model.Bairro" class="form-control form-control-sm" placeholder="Digite o Bairro do Cliente" disabled/>
                </div>
                <div class="col-xs-12 col-sm-12 col-md col-lg col-xl col-xxl">
                    <small><label asp-for="" class="small mb-0">Cidade</label></small>
                    <input maxlength="100" @bind="model.Cidade" class="form-control form-control-sm" placeholder="Digite o Cidade do Cliente" disabled/>
                </div>
            </div>

            <div class="row mt-1 mb-3">
                <div class="col-xs col-sm col-md col-lg col-xl col-xxl d-flex justify-content-end">
                    <a href="Cliente/" class="btn btn-sm btn-outline-warning ms-2">Voltar</a>
                    <a href="Cliente/Novo/@model.Id" class="btn btn-sm btn-primary ms-2">Editar</a>
                </div>
            </div>

        </div>
    </div>
</section>