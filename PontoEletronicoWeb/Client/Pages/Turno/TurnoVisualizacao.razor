@page "/Turno/Visualizar/{id:int}"

@inherits TurnoVisualizacaoBase

<section>
    <div>
        <h5 class="text-muted mb-3">Consultar Funcionário</h5>
    </div>

    <div>
        <div class="m-2">
            <div class="row">
                <div class="col-xs col-sm col-md col-lg col-xl col-xxl">
                    <div class="form-group mb-2">
                        <small><label asp-for="" class="small mb-0">Nome</label></small>
                        <input maxlength="100" @bind="model.Descricao" class="form-control form-control-sm" placeholder="Digite o nome do truno" disabled/>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md col-lg col-xl col-xxl">
                    <div class="form-group mb-2">
                        <small><label asp-for="" class="small mb-0">Hora de Inicio</label></small>
                        <input type="time" @bind="model.HoraInicio" class="form-control form-control-sm" disabled/>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg col-xl col-xxl">
                    <div class="form-group mb-2">
                        <small><label asp-for="" class="small mb-0">Hora do Termino</label></small>
                        <input type="time" @bind="model.HoraioFim" class="form-control form-control-sm" disabled/>
                    </div>
                </div>
            </div>

            <div class="row mt-1">
                <div class="col-xs col-sm col-md col-lg col-xl col-xxl">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="IdPernoite" @bind="model.PerNoite" disabled>
                        <label class="form-check-label small" for="IdPernoite">
                            PerNoite
                        </label>
                    </div>
                </div>
            </div>

            <div class="row mt-1 mb-3">
                <div class="col-xs col-sm col-md col-lg col-xl col-xxl d-flex justify-content-end">
                    <a href="Turno" class="btn btn-sm btn-outline-warning ms-2">Voltar</a>
                    <a href="Turno/Novo/@model.Id" class="btn btn-sm btn-primary ms-2">Editar</a>
                </div>
            </div>

        </div>
    </div>
</section>