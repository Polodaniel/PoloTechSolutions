@inherits MenuLateralBase

<MudPaper Width="100%" Class="d-inline-flex py-3" Square="true" Elevation="0" Style="background-color: transparent">
    <MudNavMenu Class="mud-width-full">
        <MudText Typo="Typo.h6" Class="px-4">Menu</MudText>
        <MudText Typo="Typo.caption" Class="px-4 mud-text-secondary">Versão @typeof(PontoEletronicoWeb.Client.Program).Assembly.GetName().Version</MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/" Icon="@Icons.Rounded.Home">Início</MudNavLink>
        <MudNavGroup Title="Cadastro" Icon="@Icons.Rounded.Add">
            <MudNavLink Href="/Turno" Icon="@Icons.Rounded.AccessTime">Turno</MudNavLink>
            <MudNavLink Href="/Funcionario" Icon="@Icons.Rounded.PeopleAlt">Funcionário</MudNavLink>
            <MudNavLink Href="/Cliente" Icon="@Icons.Rounded.PeopleAlt">Clientes</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="Ponto Eletrônico" Icon="@Icons.Rounded.CalendarToday">
            <MudNavLink Href="/Escala" Icon="@Icons.Rounded.List">Escala</MudNavLink>
            <MudNavLink Href="/FolhaPonto" Icon="@Icons.Rounded.Description">Folha de Ponto</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudPaper>