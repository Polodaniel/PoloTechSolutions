@inherits MessageBoxBase

<div class="messagebox" style="@StyleVisualizaMessage" id="excluiralert">
    <div class="infos">
        <Card Position="left">
            <div class="row p-2">
                <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 col-xxl-3 text-center" style="font-size: 60px;">
                    <i class="far fa-question-circle text-muted"></i>
                </div>

                <div class="col-xs col-sm col-md col-lg col-xl col-xxl">

                    <div class="row">

                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 text-muted">
                            <div class="p-2 small">
                                <h5 class="fw-bold">@Mensagem</h5>
                                <h6 class="fw-bold small">@SubMensagem</h6>
                                <h6>Deseja continuar?</h6>
                            </div>
                        </div>
                        <div class="col-xs col-sm col-md col-lg col-xl col-xxl">
                            <div class="text-end">
                                <a class="btn btn-sm btn-warning fw-bol small" @onclick="ExecutaCancelamento">@BotaoCancelar</a>
                                <a class="btn btn-sm btn-success fw-bol small" @onclick="ExecutaConfirmacao">@BotaoConfirmar</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </Card>
    </div>
</div>
